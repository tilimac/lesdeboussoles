{% extends "BackofficeBundle::layout.html.twig" %}

{% block page_container %}
    <style>
        .fa-sort{
            color: #ccc;
        }
    </style>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Prenom</th>
                        <th>Nom</th>
                        <th>Téléphone</th>
                        <th>Mail</th>
                        <th>Message</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.firstName }}</td>
                            <td>{{ contact.lastName }}</td>
                            <td>{{ contact.phoneNumber }}</td>
                            <td>{{ contact.mail }}</td>
                            <td>{{ contact.message }}</td>
                            <td><button class="btn btn-danger"><span class="fa fa-trash-o"></span></button></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}