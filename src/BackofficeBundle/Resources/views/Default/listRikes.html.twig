{% extends "BackofficeBundle::layout.html.twig" %}

{% block page_container %}
    <style>
        .fa-sort{
            color: #ccc;
        }
    </style>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                    {# sorting of properties based on query components #}
                        <th class="col-xs-1">
                            #
                        </th>
                        <th class="col-xs-6">
                            {{ knp_pagination_sortable(pagination, 'Lieu', 'h.locality') }}
                            {% if pagination.isSorted('h.locality') %}
                                <i class="fa fa-sort-{{ pagination.params.direction }} pull-right"></i>
                            {% else %}
                                <i class="fa fa-sort pull-right"></i>
                            {% endif %}
                        </th>
                        <th class="col-xs-3">
                            {{ knp_pagination_sortable(pagination, 'Date', 'h.date') }}
                            {% if pagination.isSorted('h.date') %}
                                <i class="fa fa-sort-{{ pagination.params.direction }} pull-right"></i>
                            {% else %}
                                <i class="fa fa-sort pull-right"></i>
                            {% endif %}
                        </th>
                        <th class="col-xs-2">
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for hike in pagination %}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td>{{ hike.id }}</td>
                            <td>{{ hike.locality }}</td>
                            <td>{{ hike.date|date('d/m/Y') }}</td>
                            <td><a href="{{ path('_admin_edit_hike', {'hike': hike.id}) }}" class="btn btn-primary btn-sm"><span class="fa fa-pencil"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}