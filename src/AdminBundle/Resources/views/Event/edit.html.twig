{% extends "AdminBundle::layout.html.twig" %}

{% block page_container %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Modifier un événement</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            <div class="form-group">
                {{ form_label(form.image) }}
                <div class="col-sm-9">
                    <div class="input-group">
                        {{ form_errors(form.image) }}
                        {{ form_widget(form.image) }}
                        <span class="input-group-btn">
                                <a id="image_event" href="#" data-id="app_event_image" class="btn btn-default">Choisir</a>
                            </span>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            $('#app_event_dateEvent').datetimepicker({
                locale: 'fr'
            });

            $("#image_event").on('click', function(e){
                e.preventDefault();
                var field = $(this).data('id');
                moxman.browse({
                    fields: field,
                    no_host: true
                });
            });
        })
    </script>
{% endblock %}