                                <li>
                                    <a href="{{ path('_admin_events_new') }}">Ajouter</a>
                                </li>
                                <li>
                                    <a href="{{ path('_admin_events_list') }}">Liste</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="{{ path('_admin_contacts_list') }}"><i class="fa fa-envelope fa-fw"></i> Demandes d'information</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            {% block page_container %}
            {% endblock %}
        </div>
        <!-- /#page-wrapper -->

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('bundles/app/lib/moment/moment-with-locales.min.js') }}"></script>
