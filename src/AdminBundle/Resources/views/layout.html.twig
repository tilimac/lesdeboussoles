                        <li>
                            <a href="#"><i class="fa fa-users fa-fw"></i> Membres<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="{{ path('_admin_members_list') }}">Liste</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-globe fa-fw"></i> Randonnées<span class="fa arrow"></span></a>
